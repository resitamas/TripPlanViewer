<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hu.bme.aut.mobsoft.tripplanviewer">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".TripPlanViewerApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data android:name="DATABASE" android:value="tripplanviewer.db" />
        <meta-data android:name="VERSION" android:value="3" />
        <meta-data android:name="QUERY_LOG" android:value="true" />
        <meta-data android:name="DOMAIN_PACKAGE_NAME" android:value="hu.bme.aut.mobsoft.tripplanviewer.orm.entities" />

        <activity android:name=".ui.login.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.main.MainActivity"/>
        <activity android:name=".ui.search.SearchActivity">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.main.MainActivity" />

        </activity>

        <activity android:name=".ui.trip.TripActivity"/>

        <activity android:name=".ui.trips.TripsActivity">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.search.SearchActivity" />

        </activity>

    </application>

</manifest>